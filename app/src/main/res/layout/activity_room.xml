<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp">

    <Button
        android:id="@+id/initRoomView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="初始化数据库"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/getResultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取数据"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@+id/initRoomView"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/predictResultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预测选号"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@+id/getResultView"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/initRoomView" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/frontResultView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text = "11111111"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/backResultView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text = "11111111"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/orderResultView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text = "11111111"
            android:textSize="18sp"/>
    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>